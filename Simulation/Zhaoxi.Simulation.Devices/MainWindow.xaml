<Window x:Class="Zhaoxi.Simulation.Devices.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Zhaoxi.Simulation.Devices"
        mc:Ignorable="d"
        FontFamily="Microsoft YaHei" FontWeight="ExtraLight"
        Title="MainWindow" Height="400" Width="900">
    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Background="#F7F9FA" Grid.ColumnSpan="2" BorderBrush="#EEE" BorderThickness="0,0,0,1"/>
        <TextBlock Text="入口设备" VerticalAlignment="Center" FontSize="20" Margin="20,0"/>
        <TextBlock Text="出口设备" VerticalAlignment="Center" FontSize="20" Margin="20,0" Grid.Column="1"/>

        <!--入口设备列表-->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="地磁1" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="抓拍相机" Grid.Row="1" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="道闸" Grid.Row="2" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="地磁2" Grid.Row="3" VerticalAlignment="Center" FontSize="16"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9001" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9001" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9002" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9002" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9003" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9003" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9004" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9004" Click="Button_Click"/>
            </StackPanel>
        </Grid>

        <!--出口设备列表-->
        <Grid Grid.Row="1" Grid.Column="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="地磁1" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="抓拍相机" Grid.Row="1" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="道闸" Grid.Row="2" VerticalAlignment="Center" FontSize="16"/>
            <TextBlock Text="地磁2" Grid.Row="3" VerticalAlignment="Center" FontSize="16"/>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9005" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9005" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9006" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9006" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9007" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9007" Click="Button_Click"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" TextBlock.FontSize="16">
                <TextBox Text="127.0.0.1" VerticalContentAlignment="Center" Padding="15,10" Width="120"/>
                <TextBox Text="9008" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                         Padding="15,10" Margin="15,0" Width="70"/>
                <Button Content="触发" Padding="10,0" Tag="9008" Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
